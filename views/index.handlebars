<div class="row">
    <div class="col-md-6">
        <ul class="burger-list">
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="burger">{{this.id}}. {{this.burger_name}}
                <form method="POST" action="/burgers/update" class="btn btn-primary">
                    <input class="devour-button float-right btn btn-primary" type="button" value="Devour"
                        burgerId="{{this.id}}">
                </form>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <ul class="burger-list">
            {{#each burgers}}
            {{#if this.devoured}}
            <li class="burger devoured">
                {{this.id}} {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>